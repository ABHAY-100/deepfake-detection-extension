{
    "manifest_version": 3,
    "name": "My Next.js Chrome Extension",
    "version": "1.0",
    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "icon.png"
        
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage"],
    "content_scripts": [
        {
            "matches": ["<all urls>"],  
            "js": ["content.js"]
        }
    ]
}
